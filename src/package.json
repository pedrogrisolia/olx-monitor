{
  "name": "olx-monitor",
  "version": "1.0.0",
  "description": "Programa que monitora novos anúncios feitos no OLX, alteração de preços em anúncios existentes e envia notificações pelo Telegram.",
  "main": "index.js",
  "dependencies": {
    "@types/node-cron": "^3.0.11",
    "@types/node-telegram-bot-api": "^0.64.13",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.3",
    "cycletls": "^1.0.24",
    "dotenv": "^8.2.0",
    "form-data": "^4.0.0",
    "node-cron": "^3.0.2",
    "node-telegram-bot-api": "^0.66.0",
    "simple-node-logger": "^18.12.24",
    "sqlite3": "^5.1.6"
  },
  "scripts": {
    "dev": "tsc && nodemon --watch . --ignore dist/** --ignore coverage/** --ext ts,js --exec \"tsc && node dist/bootstrap.js\"",
