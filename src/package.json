    "@types/jest": "^29.5.14",
    "@types/node": "^16.18.119",
    "@types/sqlite3": "^3.1.11",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
